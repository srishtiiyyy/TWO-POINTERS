#include <iostream>
#include <vector>
using namespace std;

/*
Problem:
Move all zeroes to the end while keeping the order of non-zero elements.

Example:
nums = [0,1,0,3,12]
Output = [1,3,12,0,0]
*/

void moveZeroes(vector<int>& nums) {
    int j = -1;
    int n = nums.size();

    // find first zero
    for (int i = 0; i < n; i++) {
        if (nums[i] == 0) {
            j = i;
            break;
        }
    }

    if (j == -1) return;   // no zero found

    for (int i = j + 1; i < n; i++) {
        if (nums[i] != 0) {
            swap(nums[i], nums[j]);
            j++;
        }
    }
}

int main() {
    vector<int> nums = {0, 1, 0, 3, 12};

    moveZeroes(nums);

    for (int x : nums) {
        cout << x << " ";
    }

    return 0;
}

/*
Time Complexity: O(n)
Space Complexity: O(1)
*/
/*
Problem:
Move all zeroes to the end while keeping the order of non-zero elements.

Example:
nums = [0,1,0,3,12]
Output = [1,3,12,0,0]
*/

public class Main {

    public static void moveZeroes(int[] nums) {
        int j = -1;
        int n = nums.length;

        // Find first zero
        for (int i = 0; i < n; i++) {
            if (nums[i] == 0) {
                j = i;
                break;
            }
        }

        if (j == -1) return;  // no zero present

        for (int i = j + 1; i < n; i++) {
            if (nums[i] != 0) {
                int temp = nums[i];
                nums[i] = nums[j];
                nums[j] = temp;
                j++;
            }
        }
    }

    public static void main(String[] args) {
        int[] nums = {0, 1, 0, 3, 12};

        moveZeroes(nums);

        for (int x : nums) {
            System.out.print(x + " ");
        }
    }
}

/*
Time Complexity: O(n)
Space Complexity: O(1)
*/
